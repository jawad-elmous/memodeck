<%- include('template/header', {title: title}) %> 
    <div class="content-bouton">
        <button class="btn-create-card">Créer une carte</button>
        <button class="btn-create-deck" onclick="createCards()">Créer un dossier</button>
    </div>
    <div>
        <table>
            <tr>
                <th data-field="id">idcard</th>
                <th data-field="name" data-sortable="true">front</th>
                <th data-field="salary" data-sortable="true">back</th>
            </tr>
        </table>
        <h1>Ajouter un paquet</h1>
        <form id="create_deck" action="/api/v1/decks" method="POST">
            <label for="front">Nom du paquet :</label>
            <input type="text" name="front" id="front">
            <br>
            <imput type="hidden" name="iduser" value=<%= iduser %> />
            <imput type="hidden" name="token" value=<%= token %> />
            <br>
            <input type="submit" value="ajouter">
        </form>
        <h1>Ajouter une carte</h1>
        <form id="create_card" action="/api/v1/cards" method="POST">
            <label for="front">Question :</label>
            <input type="text" name="front" id="front">
            <br>
            <label for="back">Réponse :</label>
            <input type="text" name="back" id="back">
            <imput type="hidden" name="iddeck" value="iddeck">
            <imput type="hidden" name="token" value=<%= token %> />
            <br>
            <input type="submit" value="ajouter">
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js" integrity="sha384-qlmct0AOBiA2VPZkMY3+2WqkHtIQ9lSdAsAn5RUJD/3vA5MKDgSGcdmIv4ycVxyn" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#create_deck').submit(function(event) {

                event.preventDefault();

                const route = $('#create_deck').attr('action');
                console.log("route: "+ route)
                let formData = {
                    deckname : $('input[name=front]').val(),
                    fkuser : $('input[name=iduser]').val()
                }
                let token = $('input[name=token]').val();

                console.log("token: "+token);
                console.log(JSON.stringify(formData));

                $.ajax({
                    url: route,
                    type: 'POST',
                    data: JSON.stringify(formData),
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader('Authorization', 'Bearer '+token);
                    },
                    success(json){
                        if(json){
                            console.log(json)
                        }
                    }
                });

            });
        });
    </script>
<%- include('template/footer') %> 